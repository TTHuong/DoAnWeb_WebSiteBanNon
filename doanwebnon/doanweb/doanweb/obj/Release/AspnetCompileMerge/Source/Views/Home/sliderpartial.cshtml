@using doanweb.Models;
@model List<tbl_slider>

<div class="container-fluid" style="margin-top: 5%;clear: both;">
    <div id="myCarousel" class="carousel slide border" data-ride="carousel">
        <ol class="carousel-indicators">
           
                @{int i=0;}
                @foreach (var item in Model )
                {
                    if(i==0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                    i++;
                }
        </ol>
        <div class="carousel-inner">
                @{int so = 0;}
                @foreach (var item in Model)
                {
                    if(so==0)
                    {
                        <div class="carousel-item active">
                        <img class="d-block w-100 slide_anh_footer" src="@Url.Content("~/Content/images/slider/" + item.DuongDan)" alt="@item.TenSlider">
                        <div class="carousel-caption d-none d-sm-block">
                            <h5><a href="" class="chu_slide">@item.TenSlider</a></h5>
                            <small class="chunho">
                                @item.NoiDungChiTiet
                            </small>
                        </div>
                    </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                        <img class="d-block w-100 slide_anh_footer" src="@Url.Content("~/Content/images/slider/" + item.DuongDan)" alt="@item.TenSlider">
                        <div class="carousel-caption d-none d-sm-block">
                            <h5><a href="" class="chu_slide">@item.TenSlider</a></h5>
                            <small class="chunho">
                                @item.NoiDungChiTiet
                            </small>
                        </div>
                    </div>
                    }
                    so++;
                    
                }
            
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>