@using doanweb.Models;
@model List<tbl_slider>

<li class="col-md-6">
    <div class="container-fluid">
        <div id="myCarousel" class="carousel slide border" data-ride="carousel">
            <div class="carousel-inner">
                @{int so = 1;}
                @foreach(var item in Model)
                {
                    if(so==1)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100 slide_anh_footer" src="@Url.Content("~/Content/images/slider/"+item.DuongDan)" alt="@item.TenSlider">
                            <div class="carousel-caption d-none d-sm-block">
                                <h5><a href="" class="chu_slide">@item.TenSlider</a></h5>
                                <small>
                                   @item.NoiDungChiTiet
                                </small>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 slide_anh_footer" src="@Url.Content("~/Content/images/slider/"+item.DuongDan)" alt="@item.TenSlider">
                            <div class="carousel-caption d-none d-sm-block">
                                <h5><a href="" class="chu_slide">@item.TenSlider</a></h5>
                                <small>
                                    @item.NoiDungChiTiet
                                </small>
                            </div>
                        </div>
                    }
                    so++;
                }
                
            </div>

        </div>
    </div>
</li>