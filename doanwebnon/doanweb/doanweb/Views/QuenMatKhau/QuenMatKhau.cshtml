@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Views/Layout/_LayoutNguoiDung.cshtml";
}

<div class="limiter" style="margin-top: 4%;">
    <div class="container-login100">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" method="POST" action="@Url.Action("QuenMatKhau", "QuenMatKhau")" name="frmquenmatkhau">
                <span class="login100-form-title p-b-53">
                    LẤY LẠI TÀI KHOẢN @ViewBag.tieude_llmk
                </span>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Tên Đăng Nhập @ViewBag.tendangnhap_llmk
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Tên Đăng Nhập Không Được Bỏ Trống !">
                    @Html.TextBox("txtquenmatkhau","",htmlAttributes: new { @class = "input100", @type = "text", @name = "username" })

                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn" type="submit" name="sbdangnhap">
                        <i class="fas fa-paper-plane"></i>&emsp;&emsp;
                        Xác Nhận Gmail
                    </button>
                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        Chưa Có Tài Khoản ?
                    </span>

                    <a href="@Url.Action("DangKy","Dangky")" class="txt2 bo1 txt3">
                        Đăng Ký Ngay
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="dropDownSelect1"></div>
