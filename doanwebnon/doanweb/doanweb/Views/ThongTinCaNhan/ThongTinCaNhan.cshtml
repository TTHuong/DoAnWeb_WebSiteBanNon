@{
    ViewBag.Title = "ThôngTinCaNhan";
    Layout = "~/Views/Layout/_LayoutNguoiDung.cshtml";
}
@using doanweb.Models;
@model tbl_member


<div class="limiter" style="margin-top: 4%;">
    <div class="container-login100">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" method="POST" action="@Url.Action("ThongTinCaNhan", "ThongTinCaNhan")">
                <span class="login100-form-title p-b-53">
                    THÔNG TIN CÁ NHÂN @ViewBag.tieude_ttcn
                </span>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Họ Và Tên @ViewBag.tenkhachhang_ttcn
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Họ Và Tên Không Được Bỏ Trống">
                    @Html.TextBoxFor(model => model.TenKhachHang, new { @class = "input100", @type = "text", @name = "yourname", @id = "yourname", @placeholder = "Họ và Tên" })

                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Ngày Sinh @ViewBag.ngaysinh_ttcn
                    </span>
                </div>
                <div class="wrap-input100 ">
                    @{
                        if(Model.NgaySinh!=null)
                        {
                            @Html.TextBoxFor(model => model.NgaySinh, new { @class = "input100", @type = "date", @name = "birthday", @id = "birthday", @min = "1940-01-01",@Value=Model.NgaySinh.Value.ToString("yyyy-MM-dd")})
                        }
                        else
                        {
                            @Html.TextBoxFor(model => model.NgaySinh, new { @class = "input100", @type = "date", @name = "birthday", @id = "birthday", @min = "1940-01-01",@Value=""})
                        }
                    }
                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Tên Đăng Nhập  @ViewBag.tendangnhap_ttcn
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Tên Đăng Nhập Không Được Bỏ Trống">
                    @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "input100", @type = "text", @placeholder = "Tên Đăng Nhập", @name = "username", @id = "username" })

                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Mật Khẩu @ViewBag.matkhau_ttcn
                    </span>
                </div>
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(model => model.MatKhau, new { @class = "input100", @type = "password", @placeholder = "Mật Khẩu", @name = "password", @id = "password" })

                   <span class="focus-input100"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Email @ViewBag.email_ttcn
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Email Không Được Bỏ Trống">
                    @Html.TextBoxFor(model => model.Email, new { @class = "input100", @type = "email", @placeholder = "VD: NguyenVanA@gmail.com", @name = "email", @id = "email"})

                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Số Điện Thoại @ViewBag.sdt_ttcn
                    </span>
                </div>
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(model => model.SDT, new { @class = "input100", @type = "tel", @placeholder = "VD: 0905974281", @name = "number", @id = "number", @maxlength = "15", @minlenght = "10"})

                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Địa Chỉ @ViewBag.diachi_ttcn
                    </span>
                </div>
                <div class="wrap-input100 ">
                    
                    @Html.TextAreaFor(model => model.DiaChi, new { @class = "input100", @type = "text", @placeholder = "VD: Thành Phố ,Quận ,Huyện,Xã ,Ấp...", @name = "address", @id = "gender"})

                    <span class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn" type="submit" id="submit_dangky" value="">
                        Lưu Thông Tin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="dropDownSelect1"></div>
